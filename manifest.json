{
  "manifest_version": 3,
  "version": "1.0",
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "default_locale": "ko",
  "permissions": ["tabs", "activeTab", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": [
        "images/original_character.png",
        "images/original_character_reverse.png",
        "images/pizza.png"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "incognito": "spanning"
}
